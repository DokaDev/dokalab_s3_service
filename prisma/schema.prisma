generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Bucket {
  id Int @id @default(autoincrement())
  name String @unique

  createdAt DateTime @map("created_at") @default(now())
  updatedAt DateTime @map("updated_at") @default(now()) @updatedAt

  files File[]

  @@map("buckets")
}

model File {
  id Int @id @default(autoincrement())

  key String @db.VarChar(512) // s3 object key
  originalFilename String @map("original_filename") @db.VarChar(255)

  fileSize BigInt @map("file_size") // per byte -> npm i graphql-scalars

  uploadedAt DateTime @map("uploaded_at") @default(now())
  deletedAt DateTime? @map("deleted_at")

  bucketId Int  @map("bucket_id")
  bucket Bucket @relation(fields: [bucketId], references: [id])

  @@map("files")
}